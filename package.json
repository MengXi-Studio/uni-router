{
	"name": "@uni-router/monorepo",
	"type": "module",
	"version": "0.1.4",
	"private": true,
	"packageManager": "pnpm@10.11.0",
	"engines": {
		"node": ">=22.14.0"
	},
	"description": "为uni-app量身定制的路由插件。其提供了与uni-app无缝集成的特性，使得路由管理变得简单而高效。",
	"author": {
		"name": "PedroQue99",
		"email": "ksmengfang@163.com"
	},
	"license": "MIT",
	"homepage": "https://github.com/MengXi-Studio/uni-router#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MengXi-Studio/uni-router.git"
	},
	"bugs": "https://github.com/MengXi-Studio/uni-router/issues",
	"keywords": [
		"uni-app",
		"router",
		"uni-router",
		"plugin",
		"navigation",
		"routing"
	],
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"stub": "pnpm -r --filter=./packages/* --parallel run stub",
		"dev": "pnpm stub",
		"build": "rimraf --glob packages/*/dist && pnpm -r --filter=./packages/* run build",
		"play:h5": "pnpm dev && pnpm -C packages/playground run dev:h5",
		"build:h5": "pnpm build && pnpm -C packages/playground run build:h5",
		"prepublishOnly": "pnpm build",
		"release": "bumpp",
		"docs:dev": "pnpm -C packages/docs run docs:dev",
		"docs:build": "pnpm -C packages/docs run docs:build",
		"docs:preview": "pnpm -C packages/docs run docs:preview",
		"docs:deploy": "pnpm -C packages/docs run docs:deploy",
		"lint": "eslint .",
		"lint:fix": "pnpm lint --fix"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^5.0.0",
		"@types/node": "^24.1.0",
		"bumpp": "^10.2.0",
		"eslint": "^9.32.0",
		"rimraf": "^6.0.1",
		"typescript": "~5.8.3",
		"unbuild": "^3.6.0"
	}
}
