{
	"name": "@mengxi/uni-router",
	"version": "1.0.0",
	"description": "为 uni-app 提供类似 vue-router 风格的路由，并提供 utils 工具函数",
	"main": "./dist/index.umd.cjs",
	"module": "./dist/index.js",
	"types": "./types/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./types/index.d.ts",
			"import": "./dist/index.es.js",
			"require": "./dist/index.umd.cjs"
		},
		"./router": {
			"types": "./types/router/index.d.ts",
			"import": "./dist/router.es.js",
			"require": "./dist/router.umd.cjs"
		},
		"./utils": {
			"types": "./types/utils/index.d.ts",
			"import": "./dist/utils.es.js",
			"require": "./dist/utils.umd.cjs"
		}
	},
	"files": [
		"dist",
		"types"
	],
	"scripts": {
		"dev": "vite",
		"build": "rimraf dist types && vite build"
	},
	"devDependencies": {
		"rimraf": "^6.0.1",
		"typescript": "~5.8.3",
		"vite": "^7.0.0",
		"vite-plugin-dts": "^4.5.4"
	}
}
