{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es2018",
		"lib": ["ESNext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"paths": {
			"@meng-xi/uni-router": ["packages/router/src/index.ts"]
		},
		"resolveJsonModule": true,
		"strict": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true
	},
	"exclude": ["**/dist/**", "**/node_modules/**"]
}
