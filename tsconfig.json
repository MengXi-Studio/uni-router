{
	"compilerOptions": {
		"target": "es2018",
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"paths": {
			"@meng-xi/uni-router": ["./packages/core/src/index.ts"]
		},
		"resolveJsonModule": true,
		"types": ["@types/node"],
		"strict": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true
	},
	"exclude": ["**/dist/**", "**/node_modules/**", "**/playground/**"]
}
