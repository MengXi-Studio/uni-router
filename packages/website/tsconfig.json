{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "esnext",
		"jsx": "preserve",
		"lib": ["esnext", "dom"],
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"types": ["@dcloudio/types", "vue", "vite/client", "@meng-xi/uni-router"],
		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
