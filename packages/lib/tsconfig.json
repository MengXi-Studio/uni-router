{
	"compilerOptions": {
		"baseUrl": ".",
		"strict": true,
		"outDir": "./dist",
		"target": "es2022",
		"module": "esnext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"moduleResolution": "bundler",
		"skipLibCheck": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"useDefineForClassFields": true,
		"paths": {
			"@/*": ["src/*"]
		},
		"types": ["vite/client", "@types/node", "@dcloudio/types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
