{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es2018",
		"lib": ["ESNext", "DOM"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"paths": {
			"@/*": ["src/*"]
		},
		"strict": true,
		"outDir": "./dist",
		"skipLibCheck": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"useDefineForClassFields": true,
		"types": ["vite/client", "@types/node", "@dcloudio/types", "vue"]
	},
	"include": ["src/**/*.ts", "src/**/*.vue"],
	"exclude": ["node_modules", "dist"]
}
